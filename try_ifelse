//using if condition

<!DOCTYPE html>
<html>
<body>

<p id="demo">Display the result here.</p>

<script>

if( 10 > 5)
{
	document.getElementById("demo").innerHTML = "I did it";
}
</script>

</body>
</html>

//if-else

<!DOCTYPE html>
<html>
<body>

<p id="demo">Display the result here.</p>

<script>
var firstName = "Greg";

if (firstName === "John") {
    document.getElementById("demo").innerHTML = "Hello John!";
}
else
{
document.getElementById("demo").innerHTML ="You're not John";
}
</script>

</body>
</html>
